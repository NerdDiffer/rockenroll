<div class='courses index'>
  <h1>Courses</h1>

  <p>
    <% link_opts = { class: 'plus_one' } %>
    <%= link_to(new_course_path, link_opts) do %>
      <i class='fa fa-plus-circle'><span>New Course</span></i>
    <% end %>
  </p>

  <table class='listing' summary='Course list'>
    <thead>
      <tr class='header'>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @courses.each do |course| %>
      <tr>
        <% locals  = { record: course } %>
        <td><%= link_to(course.name, course) %></td>
        <%= content_tag(:td, class: 'action') do %>
          <%= render(partial: 'shared/actions', locals: locals) %>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
